<UserControl
    x:Class="ChanisterWpf.Banner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChanisterWpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="40"
    d:DesignWidth="200"
    mc:Ignorable="d">
    <Button
        x:Name="BannerButton"
        MaxWidth="210"
        MaxHeight="77"
        Background="#00000000"
        BorderBrush="#00000000"
        Click="BannerButton_Click"
        Foreground="#00000000">
        <Image x:Name="image" RenderOptions.BitmapScalingMode="Fant" />
        <Button.Effect>
            <DropShadowEffect
                BlurRadius="10"
                Direction="270"
                Opacity="0.4"
                ShadowDepth="0" />
        </Button.Effect>
    </Button>
</UserControl>
