<local:ExtendedPopup
    x:Class="ChanisterWpf.ShadowedExtendedPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dropShadow="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
    xmlns:local="clr-namespace:ChanisterWpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    AllowsTransparency="True"
    mc:Ignorable="d">
    <dropShadow:SystemDropShadowChrome Margin="5" Color="#22000000">
        <Grid x:Name="Grid" Background="White" />
    </dropShadow:SystemDropShadowChrome>
</local:ExtendedPopup>
